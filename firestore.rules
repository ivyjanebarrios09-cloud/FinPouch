rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ Devices collection (still requires authenticated user)
    match /users/{userId}/devices/{deviceId} {
      allow get, list, create, update, delete: if request.auth.uid == userId;
    }

    // ðŸ”¹ Wallet Activity subcollection
    match /users/{userId}/devices/{deviceId}/walletActivity/{activityId} {
      // âœ… ESP32 can create activity logs without authentication
      allow create: if request.resource.data.keys().hasAll(['timestamp', 'reedState']);

      // âœ… Only signed-in owner can read, update, or delete
      allow get, list, update, delete: if request.auth.uid == userId;
    }
  }
}
